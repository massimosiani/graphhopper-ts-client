{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "strict": true,
        "outDir": "dist",
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": "."
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "webpack.*"
    ]
}